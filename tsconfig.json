{
  "compilerOptions": {
    "composite": true,
    "target": "ES2015",
    "module": "CommonJS",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "declaration": true,
    "noEmit": false,
    "allowJs": true,
    "incremental": true,
    "isolatedModules": true,
    "experimentalDecorators": true,
    "lib": ["dom", "dom.iterable", "esnext"],
    "jsx": "preserve"
  },
  "include": [
    "**/*.js",
    "**/*.ts"
  ]
}
